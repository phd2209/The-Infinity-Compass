# ========================================
# ENVIRONMENT VARIABLES
# Copy this file to .env and fill in your actual values
# ========================================

# --------------------------------------------
# FRONTEND VARIABLES (VITE_ prefix - exposed to browser)
# --------------------------------------------

# API URL - Where your backend/API is hosted
# Local dev: http://localhost:3001
# Production: https://your-app.vercel.app
VITE_API_URL=http://localhost:3001

# Discord Client ID (public, safe to expose)
# Get from: https://discord.com/developers/applications
VITE_DISCORD_CLIENT_ID=your_discord_client_id_here

# --------------------------------------------
# BACKEND/API VARIABLES (no prefix - server-side only)
# --------------------------------------------

# OpenAI API Key
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Alchemy API Key (for NFT fetching)
# Get from: https://dashboard.alchemy.com/
ALCHEMY_API_KEY=your_alchemy_api_key_here

# Discord OAuth Configuration
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here

# Discord OAuth Redirects
# IMPORTANT: Both should use the SAME base URL
# Local dev: http://localhost:3001
# Production: https://your-app.vercel.app
DISCORD_REDIRECT_URI=http://localhost:3001/api/verify-discord
FRONTEND_CALLBACK_URL=http://localhost:3001/auth/callback

# Discord Server Configuration
# Your Discord server (guild) ID
WOW_GUILD_ID=your_discord_guild_id_here
# Role IDs for access control
WOW_ROLE_ID=your_wow_role_id_here
WOWG_ROLE_ID=your_wowg_role_id_here
